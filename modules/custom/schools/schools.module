function schools_create_school_form($form, &$form_state, $mode = 'create') {
  // dpm($form);
  // dpm($form_state);

  switch ($mode) {
    case 'create':
      $form['title'] = array(
        '#markup' => '<h2>Register a school</h2>',
      );
      $form['name'] = array(
        '#type' => 'textfield', 
        '#title' => 'School Name',   
        '#maxlength' => 255, 
        '#required' => TRUE,
      );
      $form['address'] = array(
        '#type' => 'textfield', 
        '#title' => 'School Address',   
        '#maxlength' => 255, 
        '#required' => TRUE,
      );
      $form['zip'] = array(
        '#type' => 'textfield', 
        '#title' => 'Zip Code',   
        '#maxlength' => 10, 
        '#required' => TRUE,
      );
      $form['submit'] = array(
        '#type' => 'submit', 
        '#value' => 'Submit',
      );
    break;
    case 'edit':
      // get the school from the second argument
      $school = $form_state['build_info']['args'][1];
      // dpm($school);
      $form['title'] = array(
        '#markup' => '<h2>Register a school</h2>',
      );
      $form['name'] = array(
        '#type' => 'textfield', 
        '#title' => 'School Name',   
        '#maxlength' => 255, 
        '#required' => TRUE,
        '#default_value' => $school['name'], 
      );
      $form['address'] = array(
        '#type' => 'textfield', 
        '#title' => 'School Address',   
        '#maxlength' => 255, 
        '#required' => TRUE,
        '#default_value' => $school['address'], 
      );
      $form['zip'] = array(
        '#type' => 'textfield', 
        '#title' => 'Zip Code',   
        '#maxlength' => 10, 
        '#required' => TRUE,
        '#default_value' => $school['zip'], 
      );
      $form['actions'] = array(
        '#type' => 'container',
        '#attributes' => array(
          'id' => 'school-form-actions'
        ),
      );
      $form['actions']['edit'] = array(
        '#type' => 'button', 
        '#value' => 'Edit',
        '#ajax' => array(
          'callback' => 'schools_create_school_form_callback',
          'wrapper' => 'school-form-actions',
          'method' => 'replace',
          'effect' => 'fade',
          ),
      );
      $form['actions']['delete'] = array(
        '#type' => 'submit', 
        '#value' => 'Delete',
      );

      $form['actions']['done'] = array(
        '#type' => 'submit', 
        '#value' => 'Done',
        '#attributes' => array(
          'style' => 'display:none;',
        ),
      );
    break; 
  }

  $form['#attached']['css'] = array(
    drupal_get_path('module', 'schools') . '/css/schools_form.css',
  );
  
  return $form;
}

